{
    "redhat.telemetry.enabled": true,
    "window.nativeTabs": true,
    "window.zoomLevel": -1,
    "workbench.colorTheme": "One Dark Pro Darker",
    "workbench.tree.indent": 20,
    "workbench.commandPalette.history": 20,
    "workbench.editor.defaultBinaryEditor": "hexEditor.hexedit",
    "workbench.editor.enablePreviewFromCodeNavigation": true,
    "workbench.editor.enablePreviewFromQuickOpen": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.wrapTabs": true,
    "workbench.editor.empty.hint": "hidden",
    "workbench.settings.applyToAllProfiles": [
        "window.zoomLevel"
    ],
    "workbench.editor.languageDetection": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "terminal.integrated.fontFamily": "monospace",
    "terminal.integrated.fontSize": 14,
    "editor.formatOnSave": true,
    "editor.fontFamily": "'JetBrainsMono Nerd Font', 'JetBrains Maple Mono', 'JetBrains Mono', Menlo, Monaco, 'Courier New', 'MiSans L3', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.wordWrap": "on",
    "editor.rulers": [
        88,
        120
    ],
    "editor.largeFileOptimizations": false,
    "editor.guides.bracketPairs": "active",
    "editor.cursorStyle": "line",
    "editor.lineNumbers": "on",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.accessibilitySupport": "off",
    "editor.bracketPairColorization.enabled": true,
    "editor.wordWrapColumn": 120,
    "editor.tabCompletion": "onlySnippets",
    "editor.linkedEditing": true,
    "editor.stickyScroll.enabled": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.renderWhitespace": "all",
    "editor.minimap.renderCharacters": false,
    "editor.minimap.size": "fill",
    "editor.quickSuggestions": {
        "strings": true
    },
    "editor.suggest.showWords": true,
    "files.eol": "\n",
    "files.autoSave": "onWindowChange",
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/vendor/**": true,
        "**/runtime/**": true // <--- 必需项！不要监听运行时文件的变化
    },
    "window.titleBarStyle": "custom",
    "diffEditor.ignoreTrimWhitespace": true,
    "local-history.absolute": true,
    "local-history.path": "/tmp",
    "local-history.daysLimit": 30,
    "local-history.maxDisplay": 500,
    "local-history.saveDelay": 10,
    "vim.easymotion": true,
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-c>": false,
        "<C-f>": false,
        "<C-n>": false,
        "<C-d>": true
    },
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "Todo"
    ],
    "security.workspace.trust.untrustedFiles": "open",
    "php.suggest.basic": false,
    "php-cs-fixer.onsave": true,
    "php-cs-fixer.config": ".php-cs-fixer.php;.php-cs-fixer.dist.php;.php_cs;.php_cs.dist",
    "php-cs-fixer.rules": "@PSR12",
    "[php]": {
        "editor.defaultFormatter": "junstyle.php-cs-fixer",
        "editor.formatOnSave": false,
        "files.autoSave": "afterDelay",
        "files.autoSaveDelay": 2000
    },
    "gopls": {
        "ui.semanticTokens": true,
        "ui.completion.usePlaceholders": true
    },
    "go.toolsManagement.autoUpdate": true,
    "go.vetOnSave": "package",
    "go.formatTool": "goimports",
    "go.lintTool": "golangci-lint",
    "[go]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false,
        "editor.defaultFormatter": "golang.go",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "[go.mod]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "[python]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
    },
    "[rust]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
    },
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced",
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "[dockercompose]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced",
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "[github-actions-workflow]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "application.shellEnvironmentResolutionTimeout": 30,
    "agq.pinnedModels": [
        "MODEL_PLACEHOLDER_M8",
        "MODEL_PLACEHOLDER_M12"
    ],
    "editor.inlayHints.enabled": "on"
}